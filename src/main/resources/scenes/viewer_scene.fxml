    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="Файл">
            <MenuItem mnemonicParsing="false" onAction="#openFile" text="Открыть CGIF/RDF…"/>
            <MenuItem mnemonicParsing="false" onAction="#saveAsFile" text="Сохранить как…"/>
