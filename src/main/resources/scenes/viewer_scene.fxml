<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.etu.cgvm.controllers.ViewerSceneController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Open…" onAction="#openFile"/>
            <MenuItem mnemonicParsing="false" text="Save As…" onAction="#saveAsFile"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Quit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About Graph Viewer"/>
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.2505567928730512" VBox.vgrow="ALWAYS">
        <AnchorPane>
            <Label alignment="CENTER" layoutX="11.0" layoutY="14.0" minWidth="45.0" prefHeight="27.0"
                   prefWidth="45.0" style="&#10;" text="Input" textAlignment="CENTER">
                <font>
                    <Font size="18.0" fx:id="x1"/>
                </font>
                <textFill>
                    <Color red="0.624" green="0.624" blue="0.624" fx:id="x2"/>
                </textFill>
            </Label>
            <Button layoutX="11.0" layoutY="534.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0"
                    text="Draw" fx:id="drawButton" onAction="#clickDrawButton"/>
            <TextArea layoutX="11.0" layoutY="57.0" prefHeight="460.0" prefWidth="200.0" fx:id="input"
                      focusTraversable="true"/>
        </AnchorPane>
        <ScrollPane prefHeight="551.0" prefWidth="588.0">
            <AnchorPane id="Content" prefHeight="568.0" prefWidth="667.0">
                <Canvas height="573.0" width="670.0"/>
                <Label alignment="CENTER" font="$x1" layoutX="14.0" layoutY="14.0" style="&#10;" text="View"
                       textAlignment="CENTER" textFill="$x2"/>
            </AnchorPane>
        </ScrollPane>
    </SplitPane>
</VBox>
